@model IEnumerable<ZGym.Core.Entities.GymClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="create-ajax"></div>

<p>
    <a asp-action="Create">Create Normal</a>

    <p id="fetch">Fetch!</p>

    <a asp-action="Create" class="btn btn-warning" 
        data-ajax="true"
        data-ajax-method="GET"
        data-ajax-update="#create-ajax"
        data-ajax-mode="replace">
                                Create with Ajax
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymclasslist">
        <partial name="GymClassesPartial" />
    </tbody>
</table>
